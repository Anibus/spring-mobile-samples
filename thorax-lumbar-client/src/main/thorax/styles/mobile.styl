body
    margin: 0px
    padding: 0px

header
    height: 40px
    line-height: 40px
    background: -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.3)), color-stop(0.5, rgba(255, 255, 255, 0.1)), color-stop(0.5, rgba(255, 255, 255, 0))), -webkit-gradient(linear, left top, left bottom, from(lighten(#5b76bf, 5%)), to(#3d4f80))
    margin: 0
    padding: 0
    text-align: center
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5)

    h2
        margin: 0
        padding: 0
        color: #fffeff
        font-weight: bold
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5)

ul.listview
    list-style: none
    margin: 0px
    padding: 0px
    
ul.listview li
    border-bottom: 1px solid #999999
    padding: 0 17px
    height: 50px
    vertical-alignment: center
    line-height: 50px
    overflow: hidden
    text-overflow:ellipsis
    white-space: nowrap
    font-weight: bold
    